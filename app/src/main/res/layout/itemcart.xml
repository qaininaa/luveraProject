<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Cart Produk 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/boxcart"
            android:padding="8dp"
            android:layout_marginVertical="4dp">

            <CheckBox
                android:id="@+id/checkbox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imagelipstick1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/item1"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginHorizontal="8dp" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/namaproduk1"
                    android:text="Romand Glasting Melting Balm"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/deksripsiproduk1"
                    android:text="04 Hippie Berry"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/hargaproduk1"
                    android:text="Rp155.000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#D95E9B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end|bottom"

                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnMinus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="Kurang"
                    android:src="@drawable/ic_minus" />

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/btnPlus"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:contentDescription="Tambah"
                    android:src="@drawable/ic_plus" />
            </LinearLayout>
        </LinearLayout>

        <!-- Cart Produk 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/boxcart"
            android:padding="8dp"
            android:layout_marginVertical="4dp">

            <CheckBox
                android:id="@+id/checkbox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/imagelipstick2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/image"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginHorizontal="8dp" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/namaproduk2"
                    android:text="Wardah Colorfit Velvet Matte"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/deksripsiproduk2"
                    android:text="05 Easy Mauve"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/hargaproduk2"
                    android:text="Rp55.000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#D95E9B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end|bottom"

                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnMinus2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="Kurang"
                    android:src="@drawable/ic_minus" />

                <TextView
                    android:id="@+id/tvQuantity2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/btnPlus2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:contentDescription="Tambah"
                    android:src="@drawable/ic_plus" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
